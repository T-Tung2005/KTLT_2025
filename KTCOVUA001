#include <bits/stdc++.h>
using namespace std;
int dx[8]={-2,-2,-1,-1,1,1,2,2};
int dy[8]={-1,1,-2,2,-2,2,-1,1};
int a[100][100];
int dem=0;
int n,k,x,y;
void loang(int i,int j,int step)
{
    if(step==k+1)
    {
        return ;
    }
    a[i][j]=1;
    for(int h=0;h<8;h++)
    {
        int i1=i+dx[h];
        int j1=j+dy[h];
        if(i1<=n&&j1<=n&&i1>=1&&j1>=1)
        {
             loang(i1,j1,step+1);
        }
    }
}
int main()
{
    int q;
    cin>>q;
    while(q--)
    {
        cin>>n>>k>>x>>y;
        for(int i=1;i<=n;i++)
        {
            for(int j=1;j<=n;j++)
            {
                a[i][j]=0;
            }
        }
        loang(x,y,0);
        int dem=0;
        for(int i=1;i<=n;i++)
        {
            for(int j=1;j<=n;j++)
            {
                if(a[i][j]==1)
                {
                    dem++;
                }
            }
        }
        cout<<dem<<endl;
    }
}
