#include <bits/stdc++.h>
using namespace std;
void chuyendoi(string &s)
{
    for(int i=0;i<s.size();i++)
    {
        if(s[i]>='A'&&s[i]<='Z')
        {
            s[i]+=32;
        }
    }
}
int main()
{
   int q;
   cin>>q;
   while(q--)
   {
       string s;
       cin>>s;
       chuyendoi(s);
       int n=s.size();
       vector<int>dp(n,1);
       int ans=1;
       for(int i=0;i<s.size();i++)
       {
          for(int j=0;j<i;j++)
          {
              if(s[j]<s[i])
              {
                  dp[i]=max(dp[i],dp[j]+1);
              }
          }
          ans=max(ans,dp[i]);
       }
       cout<<ans<<endl;
   }
}
