#include <bits/stdc++.h>
using namespace std;
int a[100][100];
int dp[105][105];
int main()
{
    int q;
    cin>>q;
    while(q--)
    {
    int n;
    cin>>n;
    int a[n];
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    int d=a[1]-a[0];
    bool check=true;
    for(int i=2;i<n;i++)
    {
        if(a[i]-a[i-1]!=d)
        {
            check=false;
            break;
        }
    }
    if(check==true)
    {
        cout<<"YES"<<endl;
    }else cout<<"NO"<<endl;
}
}
