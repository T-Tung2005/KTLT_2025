#include <bits/stdc++.h>
using namespace std;
int a[105][105];
int dp[105][105];
int main() {
   int q;
   cin>>q;
   while(q--)
   {
       int n,m;
       cin>>n>>m;
       for(int i=1;i<=n;i++)
       {
           for(int j=1;j<=m;j++)
           {
               cin>>a[i][j];
               dp[i][j]=0;
           }
       }
       for(int i=1;i<=n;i++)
       {
           for(int j=1;j<=m;j++)
           {
               int trc=dp[i-1][j];
               if(j>1) trc=max(trc,dp[i-1][j-1]);
               if(j<m) trc=max(trc,dp[i-1][j+1]);
                dp[i][j]=trc+a[i][j];
           }
       }
       int tmp=0;
       for(int j=1;j<=m;j++)
       {
           tmp=max(tmp,dp[n][j]);
       }
       cout<<tmp<<endl;
   }
}
