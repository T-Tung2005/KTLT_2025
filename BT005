#include <bits/stdc++.h>
using namespace std;
int dp[505][505];
int main()
{
    int q;
    cin>>q;
    while(q--)
    {
   string a,b;
   cin>>a>>b;
   int n=a.size();
   int m=b.size();
   a="0"+a;
   b="0"+b;
   dp[0][0]=0;
   for(int i=1;i<=n;i++)
   {
       for(int j=1;j<=m;j++)
       {
           if(a[i]==b[j])
           {
               dp[i][j]=max({dp[i-1][j-1]+1,dp[i-1][j],dp[i][j-1]});
           }else
           {
               dp[i][j]=max(dp[i-1][j],dp[i][j-1]);
           }
       }
   }
   cout<<n+m-dp[n][m]<<endl;
}
}// tìm xâu con chung dài nhất
